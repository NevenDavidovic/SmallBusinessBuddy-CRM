<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:id="mainPane" spacing="20" style="-fx-background-color: #f3f4f6;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smallbusinessbuddycrm.MainController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER" style="-fx-background-color: #1e3a8a; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label text="ðŸ“Š Small Business Buddy CRM - Reporting Dashboard" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Arial';"/>
    </HBox>

    <!-- Statistics Grid -->
    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <!-- Contacts Card -->
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitWidth="40" fitHeight="40">
                    <Image url="@/images/icons/contacts.png"/>
                </ImageView>
                <Label text="Contacts Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;"/>
            </HBox>
            <Label fx:id="totalContacts" text="Total: 0" style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-padding: 10 0 0 0;"/>
            <Label fx:id="activeMembers" text="Active Members: 0" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Button fx:id="contactsReportButton" text="View Detailed Report" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-border-radius: 5; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" onAction="#handleContactsReportAction"/>
        </VBox>

        <!-- Underaged Card -->
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitWidth="40" fitHeight="40">
                    <Image url="@/images/icons/underaged.png"/>
                </ImageView>
                <Label text="Underaged Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;"/>
            </HBox>
            <Label fx:id="totalUnderaged" text="Total: 0" style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-padding: 10 0 0 0;"/>
            <Label fx:id="underagedMembers" text="Members: 0" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Button fx:id="underagedReportButton" text="View Detailed Report" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-border-radius: 5; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" onAction="#handleUnderagedReportAction"/>
        </VBox>

        <!-- Workshops Card -->
        <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitWidth="40" fitHeight="40">
                    <Image url="@/images/icons/workshops.png"/>
                </ImageView>
                <Label text="Workshops Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;"/>
            </HBox>
            <Label fx:id="totalWorkshops" text="Total: 0" style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-padding: 10 0 0 0;"/>
            <Label fx:id="activeWorkshops" text="Active: 0" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Button fx:id="workshopsReportButton" text="View Detailed Report" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-border-radius: 5; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" onAction="#handleWorkshopsReportAction"/>
        </VBox>

        <!-- Teachers Card -->
        <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitWidth="40" fitHeight="40">
                    <Image url="@/images/icons/teachers.png"/>
                </ImageView>
                <Label text="Teachers Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;"/>
            </HBox>
            <Label fx:id="totalTeachers" text="Total: 0" style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-padding: 10 0 0 0;"/>
            <Label fx:id="activeTeachers" text="Active: 0" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Button fx:id="teachersReportButton" text="View Detailed Report" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-border-radius: 5; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" onAction="#handleTeachersReportAction"/>
        </VBox>

        <!-- Lists Card -->
        <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitWidth="40" fitHeight="40">
                    <Image url="@/images/icons/lists.png"/>
                </ImageView>
                <Label text="Lists Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;"/>
            </HBox>
            <Label fx:id="totalLists" text="Total: 0" style="-fx-font-size: 16px; -fx-text-fill: #374151; -fx-padding: 10 0 0 0;"/>
            <Label fx:id="activeLists" text="Active: 0" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Button fx:id="listsReportButton" text="View Detailed Report" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-border-radius: 5; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" onAction="#handleListsReportAction"/>
        </VBox>
    </GridPane>
</VBox>
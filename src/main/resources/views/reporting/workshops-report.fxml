<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: #f3f4f6;" stylesheets="@/styles/main-style.css" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" style="-fx-background-color: #1e3a8a; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label text="Hello World - Underaged Report" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Arial';"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Back to Dashboard" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </HBox>
</VBox>
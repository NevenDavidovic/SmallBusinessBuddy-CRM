<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smallbusinessbuddycrm.controllers.utilities.PaymentTemplateViewController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <!-- Add fx:id to make title translatable -->
                        <Label fx:id="titleLabel" text="" textFill="#0099cc">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="recordCountLabel" text="" textFill="#71757a">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="5.0">
                            <children>
                                <!-- Remove hardcoded text - controller will set it -->
                                <Button fx:id="deleteSelectedButton" text=""
                                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-border-radius: 4;">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="toggleStatusButton" text=""
                                        style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-border-radius: 4;">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="createTemplateButton" text=""
                                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-border-radius: 4;" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox spacing="5.0">
                    <children>
                        <!-- Remove hardcoded text - controller will set it -->
                        <Button fx:id="allTemplatesButton" text="" style="-fx-background-color: #f5f8fa; -fx-border-color: #dfe3eb;" />
                        <Button fx:id="activeTemplatesButton" text="" style="-fx-background-color: white; -fx-border-color: #dfe3eb;" />
                        <Button fx:id="inactiveTemplatesButton" text="" style="-fx-background-color: white; -fx-border-color: #dfe3eb;" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <!-- Remove hardcoded promptText - controller will set it -->
                        <TextField fx:id="searchField" prefWidth="250.0" promptText="" style="-fx-border-color: #dfe3eb;" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <TableView fx:id="templatesTable" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="selectColumn" prefWidth="40.0" text="" />
                    <!-- Remove hardcoded text - controller will set it -->
                    <TableColumn fx:id="editColumn" prefWidth="60.0" text="" />
                    <TableColumn fx:id="nameColumn" text="" prefWidth="150.0" />
                    <TableColumn fx:id="descriptionColumn" text="" prefWidth="200.0" />
                    <TableColumn fx:id="amountColumn" text="" prefWidth="100.0" />
                    <TableColumn fx:id="modelColumn" text="" prefWidth="80.0" />
                    <TableColumn fx:id="referenceColumn" text="" prefWidth="120.0" />
                    <TableColumn fx:id="statusColumn" text="" prefWidth="80.0" />
                    <TableColumn fx:id="createdAtColumn" text="" prefWidth="140.0" />
                    <TableColumn fx:id="updatedAtColumn" text="" prefWidth="140.0" />
                </columns>
            </TableView>
        </ScrollPane>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smallbusinessbuddycrm.controllers.organization.OrganizationController"
      style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-spacing: 0;">
    <children>
        <!-- Header Section -->
        <VBox style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 30 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 8); -fx-margin: 20 20 0 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="25.0">
                    <children>
                        <!-- Modern Icon Container -->
                        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(45deg, #4facfe 0%, #00f2fe 100%); -fx-background-radius: 20; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(79,172,254,0.5), 15, 0, 0, 5);">
                            <children>
                                <Label text="🏢" style="-fx-font-size: 28px; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 5, 0, 0, 0);">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Modern Title -->
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="organizationProfileTitle" text="Organization Profile" style="-fx-text-fill: #2c3e50; -fx-font-weight: 800; -fx-font-size: 32px; -fx-font-family: 'Segoe UI', sans-serif;">
                                    <font>
                                        <Font size="32.0" />
                                    </font>
                                </Label>
                                <Label fx:id="organizationSubtitle" text="Manage your organization details" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px; -fx-font-weight: 400;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox spacing="12.0" alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" text="Edit"
                                        style="-fx-background-color: #ff7a59; -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 4; -fx-padding: 12 24; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(255,107,107,0.4), 10, 0, 0, 3); -fx-cursor: hand; -fx-border: none;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="💾  Save" visible="false"
                                        style="-fx-background-color: linear-gradient(45deg, #4ecdc4, #44a08d); -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 20; -fx-padding: 12 24; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(78,205,196,0.4), 10, 0, 0, 3); -fx-cursor: hand; -fx-border: none;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="❌  Cancel" visible="false"
                                        style="-fx-background-color: linear-gradient(45deg, #ff758c, #ff7eb3); -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 20; -fx-padding: 12 24; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(255,117,140,0.4), 10, 0, 0, 3); -fx-cursor: hand; -fx-border: none;">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Main Content -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: transparent; -fx-background-color: transparent; -fx-hbar-policy: never;">
            <content>
                <VBox spacing="25.0" style="-fx-padding: 20 20 40 20;">
                    <children>
                        <!-- Organization Image Section -->
                        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 25, 0, 0, 8);">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(45deg, #667eea, #764ba2); -fx-background-radius: 12; -fx-padding: 10;">
                                            <children>
                                                <Label text="📸" style="-fx-text-fill: white; -fx-font-size: 18px;">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <Label fx:id="organizationImageTitle" text="Organization Image" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <!-- Circular Image Container -->
                                <VBox alignment="CENTER" spacing="20.0">
                                    <children>
                                        <StackPane style="-fx-background-color: linear-gradient(45deg, #667eea, #764ba2); -fx-background-radius: 120; -fx-padding: 8; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 20, 0, 0, 5);">
                                            <children>
                                                <StackPane style="-fx-background-color: white; -fx-background-radius: 112;">
                                                    <children>
                                                        <ImageView fx:id="organizationImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                                                                   style="-fx-background-radius: 100; -fx-clip: true;" />
                                                    </children>
                                                </StackPane>
                                            </children>
                                        </StackPane>
                                        <Label fx:id="imageStatusLabel" text="No image" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic; -fx-font-size: 14px; -fx-font-weight: 500;" />
                                    </children>
                                </VBox>

                                <HBox spacing="12.0" alignment="CENTER">
                                    <children>
                                        <Button fx:id="changeImageButton" mnemonicParsing="false" onAction="#handleChangeImage" text="🖼️  Add/Change Image" visible="false"
                                                style="-fx-background-color: linear-gradient(45deg, #36d1dc, #5b86e5); -fx-text-fill: white; -fx-font-weight: 600; -fx-background-radius: 18; -fx-padding: 12 20; -fx-font-size: 13px; -fx-effect: dropshadow(gaussian, rgba(54,209,220,0.3), 8, 0, 0, 2); -fx-cursor: hand; -fx-border: none;">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="removeImageButton" mnemonicParsing="false" onAction="#handleRemoveImage" text="🗑️  Remove Image" visible="false"
                                                style="-fx-background-color: linear-gradient(45deg, #ff9a9e, #fecfef); -fx-text-fill: #e74c3c; -fx-font-weight: 600; -fx-background-radius: 18; -fx-padding: 12 20; -fx-font-size: 13px; -fx-effect: dropshadow(gaussian, rgba(255,154,158,0.3), 8, 0, 0, 2); -fx-cursor: hand; -fx-border: none;">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Basic Information Section -->
                        <VBox spacing="25.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 6);">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(45deg, #667eea, #764ba2); -fx-background-radius: 12; -fx-padding: 10;">
                                            <children>
                                                <Label text="ℹ️" style="-fx-text-fill: white; -fx-font-size: 18px;">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <Label fx:id="basicInfoTitle" text="Basic Information" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <GridPane hgap="25.0" vgap="20.0" style="-fx-background-color: linear-gradient(135deg, #f8f9fc, #e9ecf3); -fx-background-radius: 15; -fx-padding: 30;">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="140.0" prefWidth="140.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label fx:id="nameFieldLabel" text="🏢 Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                        <TextField fx:id="nameField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #667eea; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.2), 8, 0, 0, 0);" />

                                        <Label fx:id="ibanFieldLabel" text="🏦 IBAN:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <Label fx:id="ibanLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                        <TextField fx:id="ibanField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #667eea; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.2), 8, 0, 0, 0);" />

                                        <Label fx:id="emailFieldLabel" text="📧 Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                        <TextField fx:id="emailField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #667eea; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.2), 8, 0, 0, 0);" />

                                        <Label fx:id="phoneFieldLabel" text="📞 Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <Label fx:id="phoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                        <TextField fx:id="phoneField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #667eea; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.2), 8, 0, 0, 0);" />
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>

                        <!-- Address Information Section -->
                        <VBox spacing="25.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 6);">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(45deg, #4facfe, #00f2fe); -fx-background-radius: 12; -fx-padding: 10;">
                                            <children>
                                                <Label text="📍" style="-fx-text-fill: white; -fx-font-size: 18px;">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <Label fx:id="addressTitle" text="Address" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <GridPane hgap="25.0" vgap="20.0" style="-fx-background-color: linear-gradient(135deg, #f8f9fc, #e9ecf3); -fx-background-radius: 15; -fx-padding: 30;">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="140.0" prefWidth="140.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label fx:id="streetFieldLabel" text="🛣️ Street:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <HBox spacing="12.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label fx:id="streetNameLabel" HBox.hgrow="ALWAYS" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                                <Label fx:id="streetNumLabel" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-min-width: 80px; -fx-alignment: center; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                                <TextField fx:id="streetNameField" visible="false" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #4facfe; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(79,172,254,0.2), 8, 0, 0, 0);" />
                                                <TextField fx:id="streetNumField" visible="false" prefWidth="80.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #4facfe; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-alignment: center; -fx-effect: dropshadow(gaussian, rgba(79,172,254,0.2), 8, 0, 0, 0);" />
                                            </children>
                                        </HBox>

                                        <Label fx:id="postalCodeFieldLabel" text="📮 Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <Label fx:id="postalCodeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                        <TextField fx:id="postalCodeField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #4facfe; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(79,172,254,0.2), 8, 0, 0, 0);" />

                                        <Label fx:id="cityFieldLabel" text="🏙️ City:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: 600; -fx-text-fill: #555; -fx-font-size: 14px;" />
                                        <Label fx:id="cityLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e1e5f2; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);" />
                                        <TextField fx:id="cityField" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #4facfe; -fx-border-radius: 12; -fx-border-width: 2; -fx-padding: 15; -fx-font-size: 15; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(79,172,254,0.2), 8, 0, 0, 0);" />
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>

                        <!-- Metadata Section -->
                        <VBox spacing="25.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 6);">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(45deg, #f093fb, #f5576c); -fx-background-radius: 12; -fx-padding: 10;">
                                            <children>
                                                <Label text="🕒" style="-fx-text-fill: white; -fx-font-size: 18px;">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <VBox spacing="2.0">
                                            <children>
                                                <Label fx:id="recordInfoTitle" text="Record Information" style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;">
                                                    <font>
                                                        <Font size="20.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="recordInfoSubtitle" text="Creation and modification timestamps" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;">
                                                    <font>
                                                        <Font size="12.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <GridPane hgap="25.0" vgap="20.0" style="-fx-background-color: linear-gradient(135deg, #f8f9fc, #e9ecf3); -fx-background-radius: 15; -fx-padding: 30;">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="140.0" prefWidth="140.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label fx:id="createdFieldLabel" text="📅 Created:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: 600; -fx-text-fill: black; -fx-font-size: 14px;" />
                                        <Label fx:id="createdAtLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-text-fill: black; -fx-background-radius: 12; -fx-border-radius: 12; -fx-text-fill: black; -fx-font-weight: 500;" />

                                        <Label fx:id="updatedFieldLabel" text="🔄 Updated:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: 600; -fx-text-fill: black; -fx-font-size: 14px;" />
                                        <Label fx:id="updatedAtLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-text-fill: #2c3e50; -fx-font-size: 15px; -fx-padding: 15; -fx-text-fill: black; -fx-background-radius: 12; -fx-border-radius: 12; -fx-text-fill: black; -fx-font-weight: 500; " />
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
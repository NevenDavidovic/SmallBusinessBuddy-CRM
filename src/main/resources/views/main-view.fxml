<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="smallbusinessbuddycrm.MainController"
            prefHeight="700.0" prefWidth="1200.0" stylesheets="@../styles/main-style.css">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="top-bar">
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <!-- Small Business Buddy Logo at the top -->
                <Button styleClass="logo-button">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="120.0">
                            <Image url="@../images/logo/SBB-logo.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <!-- Right-side navigation icons -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <padding>
                    <Insets right="10.0"/>
                </padding>

                <!-- Support Icon -->
                <Button styleClass="icon-button" onAction="#handleHelpTemplateAction">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0">
                            <Image url="@../images/icons/support-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Notification Bell -->
                <Button styleClass="icon-button">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0">
                            <Image url="@../images/icons/notification-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Settings Gear -->
                <Button styleClass="icon-button" onAction="#handleSettingsAction">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0">
                            <Image url="@../images/icons/settings-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- User Profile with Organization Name -->
                <MenuButton fx:id="userProfileButton" text="Loading..." styleClass="user-profile-button">
                    <graphic>
                        <Circle fx:id="userAvatar" radius="15" styleClass="user-avatar" />
                    </graphic>
                    <items>
                        <MenuItem fx:id="profileMenuItem" onAction="#handleOrganizationAction" />
                        <MenuItem fx:id="settingsMenuItem" onAction="#handleSettingsAction"/>
                    </items>
                </MenuButton>
            </HBox>
        </HBox>
    </top>

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar">
            <padding>
                <Insets top="15.0" bottom="15.0" left="10.0" right="10.0"/>
            </padding>

            <!-- Main Navigation Items with Dropdowns -->
            <Accordion VBox.vgrow="ALWAYS">
                <panes>
                    <TitledPane fx:id="crmPane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                                <Image url="@../images/icons/crm-icon.png" backgroundLoading="true"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="contactsButton" styleClass="sidebar-sub-item" onAction="#handleContactsAction"/>
                            <Button fx:id="workshopsButton" styleClass="sidebar-sub-item" onAction="#handleWorkshopsAction"/>
                            <Button fx:id="teachersButton" styleClass="sidebar-sub-item" onAction="#handleTeachersAction"/>
                        </VBox>
                    </TitledPane>

                    <TitledPane fx:id="marketingPane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0">
                                <Image url="@../images/icons/marketing-icon.png"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="createEmailButton" styleClass="sidebar-sub-item" onAction="#handleEmailAction"/>
                            <Button fx:id="listsButton" styleClass="sidebar-sub-item" onAction="#handleListsAction"/>
                        </VBox>

                    </TitledPane>

                    <TitledPane fx:id="commercePane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0">
                                <Image url="@../images/icons/commerce-icon.png"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="barcodeButton" styleClass="sidebar-sub-item" onAction="#handleBarcodeAppAction"/>
                            <Button fx:id="bulkGenerationButton" styleClass="sidebar-sub-item" onAction="#handleBulkGenerationAction"/>
                        </VBox>
                    </TitledPane>

                    <TitledPane fx:id="designManagerPane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0">
                                <Image url="@../images/icons/automations-icon.png"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="paymentTemplateButton" styleClass="sidebar-sub-item" onAction="#handlePaymentTemplateAction"/>
                            <Button fx:id="newsletterTemplateButton" styleClass="sidebar-sub-item" onAction="#handleEmailTemplateAction"/>
                            <Button fx:id="paymentAttachmentButton" styleClass="sidebar-sub-item" onAction="#handlePaymentAttachmentAction"/>
                        </VBox>
                    </TitledPane>

                    <TitledPane fx:id="reportingPane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0">
                                <Image url="@../images/icons/reporting-icon.png"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="overviewButton" styleClass="sidebar-sub-item" onAction="#handleHomeReportingScreen"/>
                            <Button fx:id="underagedStatsButton" styleClass="sidebar-sub-item" onAction="#handleUnderagedReportingScreen"/>
                            <Button fx:id="contactStatsButton" styleClass="sidebar-sub-item" onAction="#handleContactReportingScreen"/>
                            <Button fx:id="workshopStatsButton" styleClass="sidebar-sub-item" onAction="#handleWorkshopReportingScreen"/>
                        </VBox>
                    </TitledPane>

                    <TitledPane fx:id="dataManagementPane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0">
                                <Image url="@../images/icons/data-managment-icon.png"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="propertiesButton" styleClass="sidebar-sub-item"/>
                            <Button fx:id="importsButton" styleClass="sidebar-sub-item"/>
                            <Button fx:id="exportButton" styleClass="sidebar-sub-item"/>
                        </VBox>
                    </TitledPane>

                    <TitledPane fx:id="libraryPane" styleClass="sidebar-accordion">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0">
                                <Image url="@../images/icons/library-icon.png"/>
                            </ImageView>
                        </graphic>
                        <VBox spacing="5">
                            <Button fx:id="documentsButton" styleClass="sidebar-sub-item"/>
                            <Button fx:id="tasksButton" styleClass="sidebar-sub-item"/>
                            <Button fx:id="resourcesButton" styleClass="sidebar-sub-item"/>
                        </VBox>
                    </TitledPane>
                </panes>
            </Accordion>

            <!-- Language Chooser at the bottom -->
            <VBox alignment="CENTER" spacing="8.0" styleClass="sidebar-bottom">
                <padding>
                    <Insets top="15.0"/>
                </padding>

                <HBox alignment="CENTER" spacing="3.0" styleClass="language-chooser">
                    <Button fx:id="englishButton" text="EN" onAction="#switchToEnglish"
                            styleClass="language-button"/>
                    <Button fx:id="croatianButton" text="HR" onAction="#switchToCroatian"
                            styleClass="language-button, language-active"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>

</BorderPane>
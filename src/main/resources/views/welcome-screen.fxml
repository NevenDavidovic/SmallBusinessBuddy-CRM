<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="smallbusinessbuddycrm.controllers.WelcomeController"
            style="-fx-background-color: #f8fafe;">

    <center>
        <VBox alignment="CENTER" spacing="40.0" style="-fx-padding: 50;">
            <!-- Welcome Header -->
            <VBox alignment="CENTER" spacing="16.0">
                <Label fx:id="welcomeTitle"
                       style="-fx-font-size: 48px; -fx-font-weight: 700; -fx-text-fill: #1a1d29;"
                       text="Welcome to Small Business Buddy" />

                <Label fx:id="welcomeSubtitle"
                       style="-fx-font-size: 18px; -fx-text-fill: #6b7280; -fx-font-weight: 400; -fx-text-alignment: center; -fx-wrap-text: true;"
                       text="Your complete CRM solution for managing contacts, workshops, and growing your business" />
            </VBox>

            <!-- Feature Cards -->
            <HBox alignment="CENTER" spacing="30.0">
                <!-- CRM Card -->
                <VBox alignment="CENTER" spacing="16.0"
                      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-border-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-min-width: 250;">

                    <ImageView fitHeight="48.0" fitWidth="48.0">
                        <Image url="@../images/icons/crm-icon.png" />
                    </ImageView>

                    <Label fx:id="crmCardTitle"
                           style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #111827;"
                           text="CRM Management" />

                    <Label fx:id="crmCardDescription"
                           style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-text-alignment: center; -fx-wrap-text: true;"
                           text="Manage your contacts, workshops, and teachers all in one place" />

                    <Button fx:id="crmButton"
                            onAction="#handleCRMAction"
                            style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand; -fx-padding: 12 24 12 24;"
                            text="Explore CRM" />
                </VBox>

                <!-- Marketing Card -->
                <VBox alignment="CENTER" spacing="16.0"
                      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-border-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-min-width: 250;">

                    <ImageView fitHeight="48.0" fitWidth="48.0">
                        <Image url="@../images/icons/marketing-icon.png" />
                    </ImageView>

                    <Label fx:id="marketingCardTitle"
                           style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #111827;"
                           text="Email Marketing" />

                    <Label fx:id="marketingCardDescription"
                           style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-text-alignment: center; -fx-wrap-text: true;"
                           text="Create and send beautiful email campaigns to engage your audience" />

                    <Button fx:id="marketingButton"
                            onAction="#handleMarketingAction"
                            style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand; -fx-padding: 12 24 12 24;"
                            text="Create Campaign" />
                </VBox>

                <!-- Reporting Card -->
                <VBox alignment="CENTER" spacing="16.0"
                      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-border-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-min-width: 250;">

                    <ImageView fitHeight="48.0" fitWidth="48.0">
                        <Image url="@../images/icons/reporting-icon.png" />
                    </ImageView>

                    <Label fx:id="reportingCardTitle"
                           style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #111827;"
                           text="Reports & Analytics" />

                    <Label fx:id="reportingCardDescription"
                           style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-text-alignment: center; -fx-wrap-text: true;"
                           text="Get insights into your business performance with detailed reports" />

                    <Button fx:id="reportingButton"
                            onAction="#handleReportingAction"
                            style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand; -fx-padding: 12 24 12 24;"
                            text="View Reports" />
                </VBox>
            </HBox>

            <!-- Quick Actions -->
            <VBox alignment="CENTER" spacing="20.0">
                <Label fx:id="quickActionsTitle"
                       style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #1a1d29;"
                       text="Quick Actions" />

                <HBox alignment="CENTER" spacing="16.0">
                    <Button fx:id="addContactButton"
                            onAction="#handleAddContactAction"
                            style="-fx-background-color: #f3f4f6; -fx-text-fill: #374151; -fx-font-size: 14px; -fx-font-weight: 500; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand; -fx-padding: 10 20 10 20;"
                            text="+ Add Contact" />

                    <Button fx:id="createWorkshopButton"
                            onAction="#handleCreateWorkshopAction"
                            style="-fx-background-color: #f3f4f6; -fx-text-fill: #374151; -fx-font-size: 14px; -fx-font-weight: 500; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand; -fx-padding: 10 20 10 20;"
                            text="+ Create Workshop" />

                    <Button fx:id="viewSettingsButton"
                            onAction="#handleSettingsAction"
                            style="-fx-background-color: #f3f4f6; -fx-text-fill: #374151; -fx-font-size: 14px; -fx-font-weight: 500; -fx-background-radius: 8; -fx-border-radius: 8; -fx-cursor: hand; -fx-padding: 10 20 10 20;"
                            text="âš™ Settings" />
                </HBox>
            </VBox>

            <!-- Organization Info -->
            <VBox alignment="CENTER" spacing="12.0"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);">

                <Label fx:id="organizationLabel"
                       style="-fx-font-size: 16px; -fx-font-weight: 500; -fx-text-fill: #6b7280;"
                       text="Current Organization:" />

                <Label fx:id="organizationName"
                       style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1a1d29;"
                       text="Loading..." />
            </VBox>
        </VBox>
    </center>
</BorderPane>